---
import Header, { type ActiveRoute } from "../components/Header.astro";
import { BASE } from "../consts";
import "../styles/global.css";

interface Props {
  pageTitle: string;
  activeRoute: ActiveRoute | null;
}

const { pageTitle, activeRoute } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href={`${BASE}/favicon.ico`} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body
    class="h-screen antialiased text-slate-500 dark:text-slate-400 bg-gray-200 dark:bg-slate-900"
  >
    <Header activeRoute={activeRoute} />

    <main class="h-full mt-16 px-6 lg:px-0 mx-auto max-w-3xl">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  * {
    @apply box-border;
  }

  h1 {
    @apply text-5xl;
  }

  h2 {
    @apply text-4xl;
  }

  h3 {
    @apply text-3xl;
  }

  h4 {
    @apply text-2xl;
  }

  h5 {
    @apply text-xl;
  }

  h6 {
    @apply text-lg;
  }
</style>
